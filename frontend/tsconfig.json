{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "strict": true,
    "jsx": "preserve",
    "strictNullChecks": true,
    "importHelpers": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "es2022",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "vite.config.*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
